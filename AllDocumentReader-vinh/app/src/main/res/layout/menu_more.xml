<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/background_dialog"
    android:padding="@dimen/_6sdp"
    >
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/container_rename"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/animation_button_sort"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/container_print">

        <ImageView
            android:id="@+id/iv_rename"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="@dimen/_8sdp"
            android:src="@drawable/ic_sort_by_date"
            app:layout_constraintHorizontal_chainStyle="spread"
            app:layout_constraintHorizontal_weight="2"
            app:layout_constraintBottom_toBottomOf="@id/container_rename"
            app:layout_constraintEnd_toStartOf="@id/tv_rename"
            app:layout_constraintStart_toStartOf="@id/container_rename"
            app:layout_constraintTop_toTopOf="@id/container_rename"
            />

        <TextView
            android:id="@+id/tv_rename"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Rename"
            android:textSize="@dimen/_14ssp"
            android:paddingTop="@dimen/_8sdp"
            android:paddingBottom="@dimen/_8sdp"
            android:paddingStart="@dimen/_8sdp"
            android:paddingEnd="@dimen/_36sdp"
            app:layout_constraintHorizontal_chainStyle="spread"
            app:layout_constraintHorizontal_weight="5"
            app:layout_constraintTop_toTopOf="@id/iv_rename"
            app:layout_constraintStart_toEndOf="@id/iv_rename"
            app:layout_constraintBottom_toBottomOf="@id/iv_rename"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/container_print"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/animation_button_sort"
        app:layout_constraintTop_toBottomOf="@id/container_rename"
        app:layout_constraintEnd_toEndOf="@id/container_rename"
        app:layout_constraintStart_toStartOf="@id/container_rename"
        app:layout_constraintBottom_toTopOf="@id/container_favorite">
        <ImageView
            android:id="@+id/iv_print"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_sort_by_name"
            android:padding="@dimen/_8sdp"
            app:layout_constraintHorizontal_chainStyle="spread"
            app:layout_constraintHorizontal_weight="2.5"
            app:layout_constraintTop_toTopOf="@id/container_print"
            app:layout_constraintBottom_toBottomOf="@id/container_print"
            app:layout_constraintStart_toStartOf="@id/container_print"
            app:layout_constraintEnd_toStartOf="@id/tv_sort_by_name"
            />
        <TextView
            android:id="@+id/tv_sort_by_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Print"
            android:textSize="@dimen/_14ssp"
            android:paddingTop="@dimen/_8sdp"
            android:paddingBottom="@dimen/_8sdp"
            android:paddingStart="@dimen/_8sdp"
            android:paddingEnd="@dimen/_36sdp"
            app:layout_constraintHorizontal_weight="5"
            app:layout_constraintTop_toTopOf="@id/iv_print"
            app:layout_constraintStart_toEndOf="@id/iv_print"
            app:layout_constraintBottom_toBottomOf="@id/iv_print"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/container_favorite"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/animation_button_sort"
        app:layout_constraintTop_toBottomOf="@id/container_print"
        app:layout_constraintEnd_toEndOf="@id/container_rename"
        app:layout_constraintStart_toStartOf="@id/container_rename"
        app:layout_constraintBottom_toTopOf="@id/container_share">
        <ImageView
            android:id="@+id/iv_favorite"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_sort_by_name"
            android:padding="@dimen/_8sdp"
            app:layout_constraintHorizontal_chainStyle="spread"
            app:layout_constraintHorizontal_weight="2"
            app:layout_constraintTop_toTopOf="@id/container_favorite"
            app:layout_constraintBottom_toBottomOf="@id/container_favorite"
            app:layout_constraintStart_toStartOf="@id/container_favorite"
            app:layout_constraintEnd_toStartOf="@id/tv_favorite"
            />
        <TextView
            android:id="@+id/tv_favorite"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Favorite"
            android:textSize="@dimen/_14ssp"
            android:paddingTop="@dimen/_8sdp"
            android:paddingBottom="@dimen/_8sdp"
            android:paddingStart="@dimen/_8sdp"
            android:paddingEnd="@dimen/_36sdp"
            app:layout_constraintHorizontal_weight="5"
            app:layout_constraintTop_toTopOf="@id/iv_favorite"
            app:layout_constraintStart_toEndOf="@id/iv_favorite"
            app:layout_constraintBottom_toBottomOf="@id/container_favorite"

            />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/container_share"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/animation_button_sort"
        app:layout_constraintTop_toBottomOf="@id/container_favorite"
        app:layout_constraintEnd_toEndOf="@id/container_rename"
        app:layout_constraintStart_toStartOf="@id/container_rename"
        app:layout_constraintBottom_toBottomOf="parent"
        >
        <ImageView
            android:id="@+id/iv_share"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_sort_by_name"
            android:padding="@dimen/_8sdp"
            app:layout_constraintHorizontal_chainStyle="spread"
            app:layout_constraintHorizontal_weight="2.4"
            app:layout_constraintTop_toTopOf="@id/container_share"
            app:layout_constraintBottom_toBottomOf="@id/container_share"
            app:layout_constraintStart_toStartOf="@id/container_share"
            app:layout_constraintEnd_toStartOf="@id/tv_share"
            />
        <TextView
            android:id="@+id/tv_share"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Share"
            android:textSize="@dimen/_14ssp"
            android:paddingTop="@dimen/_8sdp"
            android:paddingBottom="@dimen/_8sdp"
            android:paddingStart="@dimen/_8sdp"
            android:paddingEnd="@dimen/_36sdp"
            app:layout_constraintHorizontal_weight="5"
            app:layout_constraintTop_toTopOf="@id/iv_share"
            app:layout_constraintStart_toEndOf="@id/iv_share"
            app:layout_constraintBottom_toBottomOf="@id/container_share"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>